{% extends 'base.html.twig' %}

    {% block body %}
        <div class="container">
            <h1 class="center" id="title">Create a new formulaire</h1>
            {{ form_start(form) }}
                <div class="panel">
                    {{ form_row(form.sexe, {'label': ' ', 'attr': {'data-toggle': 'toggle', 'data-on': 'M', 'data-off': 'Mme'}}) }}
                    {{ form_row(form.nom, {'label': 'Nom'}) }}
                    {{ form_row(form.prenom, {'label': 'Pr√©nom'}) }}
                    {{ form_row(form.datebirth, {'label': 'Date de naissance'}) }}
                    {{ form_row(form.email, {'label': 'E-mail'}) }}
                    {{ form_row(form.pays) }}
                    {{ form_row(form.zipcode) }}
                    {{ form_row(form.autreResidence) }}

                        <div id="hideMe">
                            {{ form_row(form.autrePays) }}
                            {{ form_row(form.idNumberFiscale) }}
                        </div>

                    {{ form_row(form.offre, {'label': 'Accepter de recevoir nos offres.'}) }}
                    {{ form_row(form.save, {'label': 'Valider'}) }}
                </div>
            {{ form_end(form) }}

        </div>
    {% endblock %}

    {% block javascripts %}
        {{ parent() }}
            <script src="{{ asset('js/main.js') }}"></script>
    {% endblock %}
